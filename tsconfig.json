{
  "compilerOptions": {
    "target": "es5", // または "es2015", "esnext" など
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx" // React 17以降の場合
    // または "jsx": "react" // React 16以前の場合
  },
  "include": [
    "client/src/**/*.ts",
    "client/src/**/*.tsx"
  ]
}